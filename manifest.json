{
  "manifest_version": 3,
  "name": "JadeShip.com Extension",
  "version": "1.21.0",
  "description": "(formerly RepArchive Ext) Converts links on reddit and yupoo to your favorite shopping agent; enriched with price info and QC pics",
  "icons": {
    "48": "public/icon.png"
  },
  "action": {
    "default_icon": "public/icon.png",
    "default_popup": "build/js/index.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["public/agent_logos/*", "public/platform_logos/*"],
      "matches": [
        "*://*.reddit.com/*",
        "*://*.x.yupoo.com/*",
        "*://*.wegobuy.com/*",
        "*://*.superbuy.com/*",
        "*://*.sugargoo.com/*",
        "*://*.cssbuy.com/*",
        "*://*.pandabuy.com/*",
        "*://*.hagobuy.com/*",
        "*://*.hegobuy.com/*",
        "*://*.kameymall.com/*",
        "*://*.ezbuycn.com/*",
        "*://*.cnfans.com/*",
        "*://*.hoobuy.com/*",
        "*://*.basetao.com/*",
        "*://*.allchinabuy.com/*",
        "*://*.acbuy.com/*",
        "*://*.mulebuy.com/*",
        "*://*.eastmallbuy.com/*",
        "*://*.hubbuycn.com/*",
        "*://*.joyabuy.com/*",
        "*://*.orientdig.com/*",
        "*://*.oopbuy.com/*",
        "*://*.lovegobuy.com/*",
        "*://*.blikbuy.com/*",
        "*://*.ponybuy.com/*",
        "*://*.panglobalbuy.com/*",
        "*://*.taobao.com/*",
        "*://*.weidian.com/*",
        "*://*.1688.com/*",
        "*://*.tmall.com/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*", "*://*.x.yupoo.com/*"],
      "js": ["build/js/content_script.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.wegobuy.com/*",
        "*://*.superbuy.com/*",
        "*://*.sugargoo.com/*",
        "*://*.cssbuy.com/*",
        "*://*.pandabuy.com/*",
        "*://*.hagobuy.com/*",
        "*://*.hegobuy.com/*",
        "*://*.kameymall.com/*",
        "*://*.ezbuycn.com/*",
        "*://*.cnfans.com/*",
        "*://*.hoobuy.com/*",
        "*://*.basetao.com/*",
        "*://*.allchinabuy.com/*",
        "*://*.acbuy.com/*",
        "*://*.mulebuy.com/*",
        "*://*.eastmallbuy.com/*",
        "*://*.hubbuycn.com/*",
        "*://*.joyabuy.com/*",
        "*://*.orientdig.com/*",
        "*://*.oopbuy.com/*",
        "*://*.lovegobuy.com/*",
        "*://*.blikbuy.com/*",
        "*://*.ponybuy.com/*",
        "*://*.panglobalbuy.com/*",
        "*://*.taobao.com/*",
        "*://*.weidian.com/*",
        "*://*.1688.com/*",
        "*://*.tmall.com/*"
      ],
      "js": ["build/js/toolbar.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "build/js/background.js"
  },
  "host_permissions": [
    "*://*.wegobuy.com/*",
    "*://*.superbuy.com/*",
    "*://*.sugargoo.com/*",
    "*://*.cssbuy.com/*",
    "*://*.pandabuy.com/*",
    "*://*.hagobuy.com/*",
    "*://*.hegobuy.com/*",
    "*://*.kameymall.com/*",
    "*://*.ezbuycn.com/*",
    "*://*.cnfans.com/*",
    "*://*.hoobuy.com/*",
    "*://*.basetao.com/*",
    "*://*.allchinabuy.com/*",
    "*://*.acbuy.com/*",
    "*://*.mulebuy.com/*",
    "*://*.eastmallbuy.com/*",
    "*://*.hubbuycn.com/*",
    "*://*.joyabuy.com/*",
    "*://*.orientdig.com/*",
    "*://*.oopbuy.com/*",
    "*://*.lovegobuy.com/*",
    "*://*.blikbuy.com/*",
    "*://*.ponybuy.com/*",
    "*://*.panglobalbuy.com/*"
  ],
  "permissions": ["storage", "webNavigation", "scripting"]
}
